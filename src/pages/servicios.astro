---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const services = await getCollection("services");
const equipos = await getCollection("equipos");
---

<Layout title="VetClinic - Servicios">
  <section class="relative py-20 bg-white overflow-hidden" id="servicios">
    <div class="absolute left-0 right-0 top-0 h-40 bg-blue-50"></div>
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-xl shadow-xl p-8 mb-10 border border-gray-100">
        <span class="inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-700 text-sm font-medium mb-4">Atención especializada</span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 relative">
          Nuestros Servicios
          <span class="absolute -bottom-3 left-0 w-20 h-1 bg-blue-500"></span>
        </h1>
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
          <p class="text-lg text-gray-600 max-w-2xl prose">
            Ofrecemos atención médica de calidad con profesionales altamente calificados y tecnología moderna para el cuidado integral de tus mascotas.
          </p>
          <img src="/img/vet-icon.jpg" alt="Veterinary Icon" class="w-24 h-24 object-contain hidden md:block" />
        </div>
      </div>
    </div>
  </section>

  <!-- Banner promocional -->
  <section class="py-8 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
        <img 
          src="/img/banner-veterinaria-oferta.jpg" 
          alt="Beneficios 15% descuento - Comunidad Veterinaria Universidad" 
          class="w-full h-auto object-cover"
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-12 px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        services.map((service) => {
          const { slug, data } = service;
          const { title, description, img } = data;

          return (
            <a href={`/servicios/${slug}`} class="block h-full group">
              <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-all duration-300 flex flex-col h-full border border-gray-100 hover:border-blue-200 hover:translate-y-[-5px]">
                {img && (
                  <div class="relative h-44 overflow-hidden">
                    <img
                      src={`/img/servicios/${img}`}
                      alt={title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
                  </div>
                )}

                <div class="p-5 flex flex-col flex-grow">
                  <div class="flex items-start gap-3 mb-3">
                    <div class="w-8 h-8 flex-shrink-0 rounded-full bg-blue-100 flex items-center justify-center mt-0.5">
                      <!-- Icono según el servicio -->
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-800 group-hover:text-blue-700 transition-colors">
                      {title}
                    </h3>
                  </div>
                  
                  <p class="prose text-gray-600 mb-4 text-sm line-clamp-2">
                    {description}
                  </p>
                  
                  <div class="flex justify-end mt-auto">
                    <span class="inline-flex items-center text-blue-600 text-sm font-medium">
                      Ver detalles
                      <svg
                        class="w-4 h-4 ml-1 group-hover:ml-2 transition-all"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"
                        />
                      </svg>
                    </span>
                  </div>
                </div>
              </article>
            </a>
          );
        })
      }
    </div>
  </section>

  <!-- Sección de Estadísticas -->
  <section class="relative py-20 bg-white overflow-hidden">
    <div class="absolute left-0 right-0 top-0 h-40 bg-blue-50"></div>
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Tarjeta principal con estadísticas -->
      <div class="bg-white rounded-xl shadow-xl p-8 border border-gray-100">
        <div class="text-center mb-8">
          <span class="inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-700 text-sm font-medium mb-4">Resultados comprobados</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6 relative">
            Nuestra Experiencia en Números
            <span class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-blue-500"></span>
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Más de una década brindando cuidado veterinario de excelencia con resultados que nos respaldan
          </p>
        </div>

        <!-- Grid de estadísticas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
          <div class="text-center stat-item group" data-target="2500">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 transition-all duration-300 group-hover:shadow-lg group-hover:-translate-y-2">
              <div class="stat-number text-4xl font-bold text-blue-600 mb-2">0</div>
              <div class="text-gray-700 font-medium">Clientes Satisfechos</div>
              <div class="text-sm text-gray-500 mt-1">Confianza garantizada</div>
            </div>
          </div>

          <div class="text-center stat-item group" data-target="8500">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 transition-all duration-300 group-hover:shadow-lg group-hover:-translate-y-2">
              <div class="stat-number text-4xl font-bold text-blue-600 mb-2">0</div>
              <div class="text-gray-700 font-medium">Mascotas Atendidas</div>
              <div class="text-sm text-gray-500 mt-1">Salud y bienestar</div>
            </div>
          </div>

          <div class="text-center stat-item group" data-target="12">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 transition-all duration-300 group-hover:shadow-lg group-hover:-translate-y-2">
              <div class="stat-number text-4xl font-bold text-blue-600 mb-2">0</div>
              <div class="text-gray-700 font-medium">Años de Experiencia</div>
              <div class="text-sm text-gray-500 mt-1">Tradición veterinaria</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

    <!-- Sección de Equipos -->
  <section class="relative py-20 bg-gray-50 overflow-hidden" id="equipos">
    <div class="absolute left-0 right-0 top-0 h-40 bg-blue-50"></div>
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-xl shadow-xl p-8 mb-12 border border-gray-100">
        <div class="text-center">
          <span class="inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-700 text-sm font-medium mb-4">Tecnología avanzada</span>
          <h2 class="text-3xl font-bold text-gray-800 mb-6 relative">
            Equipos de Última Tecnología
            <span class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-blue-500"></span>
          </h2>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          equipos.map((equipo, index) => (
            <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
              <div class="relative h-48 overflow-hidden">
                <img
                  src={`/img/equipos/${equipo.data.img}`}
                  alt={equipo.data.title}
                  class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                
                <div class="absolute top-4 left-4">
                  <span class="bg-blue-600 text-white px-2 py-1 rounded-full text-xs font-medium">
                    {String(index + 1).padStart(2, '0')}
                  </span>
                </div>
              </div>

              <div class="p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-2 hover:text-blue-700 transition-colors">
                  {equipo.data.title}
                </h3>
                <p class="text-gray-600 text-sm mb-4">
                  {equipo.data.description}
                </p>
                
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                  <span class="text-xs text-gray-500">Disponible</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .stat-item {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease-out;
  }
  
  .stat-item.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  .stat-item:nth-child(2) {
    transition-delay: 0.2s;
  }
  
  .stat-item:nth-child(3) {
    transition-delay: 0.4s;
  }
</style>

<script>
  function initStats() {
    const statItems = document.querySelectorAll('.stat-item');
    if (!statItems.length) return;

    // Resetear estado inicial
    statItems.forEach(item => {
      item.classList.remove('animate-in');
      const numberElement = item.querySelector('.stat-number');
      if (numberElement) numberElement.textContent = '0';
    });

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && !entry.target.classList.contains('animate-in')) {
          const target = parseInt(entry.target.dataset.target);
          const numberElement = entry.target.querySelector('.stat-number');
          
          // Añadir clase de animación
          entry.target.classList.add('animate-in');
          
          // Animar contador
          let current = 0;
          const increment = target / 50;
          const timer = setInterval(() => {
            current += increment;
            if (current >= target) {
              current = target;
              clearInterval(timer);
            }
            numberElement.textContent = Math.floor(current).toLocaleString();
          }, 30);
        }
      });
    }, { threshold: 0.4 });

    statItems.forEach(item => observer.observe(item));
  }

  // Ejecutar en carga inicial y navegación SPA
  document.addEventListener('DOMContentLoaded', initStats);
  document.addEventListener('astro:page-load', initStats);
</script>